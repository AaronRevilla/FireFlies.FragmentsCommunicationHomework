<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.aaron.fragmentscommunicationhomework.Fragment1"
    android:background="#a455c138"
    android:orientation="vertical"
    android:id="@+id/fragment1">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:text="FRAGMENT 1"
        android:gravity="center"
        android:textSize="24sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1"
        android:layout_margin="@dimen/activity_vertical_margin">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No any messages from Fragment 2 yet"
            android:id="@+id/textViewF1"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/textF1"
            android:hint="Enter Text" />

        <Button
            android:text="Send Text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/sendTextButtonF1"
            android:onClick="sendText"
            android:layout_weight="0.13" />
    </LinearLayout>


</LinearLayout>
